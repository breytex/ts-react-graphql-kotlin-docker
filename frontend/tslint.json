{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "defaultSeverity": "warning",
  "rules": {
    "semicolon": [true, "never"],
    "no-empty-interface": false,
    "import-sources-order": "any",
    "no-console": false
  }
}
